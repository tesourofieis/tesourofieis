---
import { Card, LinkCard } from "@astrojs/starlight/components";
const { date } = Astro.props;
import { getHours } from "date-fns";
const hour = getHours(date);
const title = "Pequeno Ofício de Nossa Senhora";
---

{hour >= 0 && hour < 3 && (
      <LinkCard
        title={title}
        description="Matina"
        href="/devocionario/oficio/matinas"
      />
    )
  }

  {hour >= 3 && hour < 6 && (
      <LinkCard
        title={title}
        description="Lauds"
        href="/devocionario/oficio/lauds"
      />
    )
  }

{hour >= 6 && hour < 9 && (
      <LinkCard
        title={title}
        description="Prima"
        href="/devocionario/oficio/prima"
      />
    )
  }

{hour >= 9 && hour < 12 && (
      <LinkCard
        title={title}
        description="Terça"
        href="/devocionario/oficio/terca"
      />
    )
  }

{hour >= 12 && hour < 15 && (
      <LinkCard
        title={title}
        description="Sexta"
        href="/devocionario/oficio/sexta"
      />
    )
  }

{hour >= 15 && hour < 18 && (
      <LinkCard
        title={title}
        description="Noa"
        href="/devocionario/oficio/noa"
      />
    )
  }

{hour >= 18 && hour < 21 && (
      <LinkCard
        title={title}
        description="Vésperas"
        href="/devocionario/oficio/vesperas"
      />
    )
  }

{hour >= 21 && hour < 0 && (
      <LinkCard
        title={title}
        description="Completas"
        href="/devocionario/oficio/completas"
      />
    )
  }
